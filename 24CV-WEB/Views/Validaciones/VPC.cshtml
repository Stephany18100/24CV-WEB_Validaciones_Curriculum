@model _24CV_WEB.Models.Curriculum

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 p-3 rounded-4 align-items-center justify-content-center" style="background-color: #3498db; color: white;">
            <div style="margin: 0 auto 24px; display: flex; justify-content: center">
                <img src="~/Fotos/@Model.RutaFoto" width="240" height="240" class="rounded-circle" />
            </div>
        </div>
        <div class="col-lg-6 p-3 rounded-4 align-items-center justify-content-center" style="background-color: #3498db; color: white;">
            <h3 class="text-center">Nombre: @Model.Nombre @Model.Apellidos</h3>
            <div>
                <div class="rounded-2" style="background-color: #2980b9;">
                    <p class="text-white text-center">DESCRIPCIÓN</p>
                </div>
                <p>lorem ipsum dolor sit amet, consectetur adipiscing elit. habitasse diam et elementum</p>
                <div class="rounded-2" style="background-color: #2980b9;">
                    <p class="text-white text-center">EMAIL</p>
                </div>
                <p>Correo: @Model.Email</p>
            </div>
            <div class="rounded-2" style="background-color: #2980b9;">
                <h5 class="text-center">Informacion Personal</h5>
            </div>
            <div>
                <p>Fecha de Nacimiento: <span>@Model.FechaNacimiento.ToShortDateString()</span></p>
            </div>
            <div>
                <p>CURP: <span>@Model.CURP</span></p>
            </div>
            <div class="rounded-2" style="background-color: #2980b9;">
                <h5 class="text-center">IDIOMAS</h5>
            </div>
            <div>
                <p>Ingles: <span>@Model.PorcentajeIngles.ToString()%</span></p>
            </div>
            <div class="rounded-2" style="background-color: #2980b9;">
                <p class="text-white text-center">DIRECCIÓN</p>
            </div>
            <p>@Model.Dirección</p>
        </div>
    </div>
</div>